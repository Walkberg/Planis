{
  "name": "planis-electron",
  "version": "1.0.0",
  "description": "Planis Desktop Application",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"cd ../planis && npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "npm run build:renderer && npm run build:electron && electron-builder",
    "build:renderer": "cd ../planis && npm run build",
    "build:electron": "tsc",
    "start": "cross-env NODE_ENV=production electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.planis.app",
    "productName": "Planis",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist-electron/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "../planis/dist",
        "to": "renderer/dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "resources/icon.png",
      "category": "Utility"
    }
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "typescript": "^5.9.3",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "electron": "^40.2.1",
    "electron-updater": "^6.3.9"
  }
}
